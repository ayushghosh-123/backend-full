<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Focus on carrer</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 py-10">
        <form action="/create" method="POST">
          <input
            class="block w-full rounded-md outline-none py-2 bg-white"
            type="text"
            placeholder="Tiltle goes here"
            name="title"
          />
          <textarea
            class="block w-full rounded-md outline-none mt-2 bg-white resize-none"
            placeholder="write your task detail here "
            name="detail"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap">
        <%if (files.length > 0){ %> 
        <% files.forEach((val)=>{ %>
        <div class="task w-72 mx-6  px-6 py-4 bg-white rounded-md">
          <h1 class="text-1xl tracking-tighter"><%= val %></h1>
          <div class="flex w-full justify-between mt-3">
            <a class="text-blue-500 inline-block " href="/files/<%= val %>">Read More</a>  
            <a class="text-zinc-600"href="/edit/<%= val %>">EditFile Name</a>
          </div>
        </div>
        <%})%> 
        <%} else {%>
        <h3 class="text-white mx-4">No task yet</h3>
        <%} %>
      </div>
    </div>
  </body>
</html>
