            <input class="px-3 py-3 border-2 border-zinc-800 outline-none bg-transparent text-white placeholder-gray-400" type="text" placeholder="Image URL">
            <input class="px-5 py-2 bg-blue-500 rounded-lg cursor-pointer hover:bg-blue-600 transition" type="submit" value="Create User">
        </form>
    </div>
