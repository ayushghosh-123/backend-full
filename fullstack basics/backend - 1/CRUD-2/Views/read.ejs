<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">  <!-- Ensure correct path -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>  <!-- Correct Tailwind CDN -->
</head>
<body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
        <a href="/user" class="text-blue-500">Back To Home</a>
        <h1 class="text-3xl tracking-tighter flex justify-center items-center">Create User</h1> <!-- Fixed "item-center" to "items-center" -->
        
        <div class="users flex flex-wrap gap-5 mt-10">
            <% users.forEach(function(e){ %> <!-- Fixed foreach to forEach -->
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hiddden">
                        <img  class="w-full h-full object-cover object-centre" src="<%= e.image %>" alt="">
                    </div> <!-- Fixed "h-50" to "h-[50px]" -->
                    
                    <h3 class="text-3xl tracking-tighter"><%= e.name %></h3> <!-- Added "=" to output value -->
                    <h5 class="text-zinc-500"><%= e.email %></h5> <!-- Added "=" to output value -->
                    
                    <div class="flex gap-3 mt-10">
                        <a href="/edit/<%= e._id %>" class="text-white">Edit User</a> <!-- Fixed class "text-white-600" to "text-white" -->
                        <a href="/delete/<%= e._id %>" class="text-orange-600">Delete User</a>
                    </div>
                </div>
               <% }); %> <!-- Closed the forEach loop correctly -->
        </div>
    </div>
</body>
</html>
